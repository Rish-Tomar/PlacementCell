<!-- this file contains the overall layout of our apps web page -->

<html lang="en">
<head>
    
    <title><%= title %> </title>
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <%- style %>
</head>
<body>
<%- include('_header') %>

<main>
    
    <%- body %>
</main>
<!-- the above body will fill itself the required ejs file 
     for example if home is to be rendered then it will home .ejs as its body -->


<%- include('_footer') %>

<%- script %>

<script>
    //do not remove ejs syntax symbol and percentage signs otherwise it will not function
   <% if(flash.success && flash.success.length>0){ %> 
    new Noty({
        theme:'relax',
        text: "<%= flash.success %>",
        type:'success',
        layout:'topRight',
        timeout: 1000
     }).show();

     <%}%>
     <% if(flash.error && flash.error.length>0){ %> 
    new Noty({
        theme:'relax',
        text: "<%= flash.error %>",
        type:'error',
        layout:'topRight',
        timeout: 1000
     }).show();

     <%}%>
</script>
</body>
</html>